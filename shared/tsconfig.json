{
  "compilerOptions": {
		"strict": true,
		"skipLibCheck": true,
    "target": "esnext",
    "module": "esnext",
		"moduleResolution": "bundler",
    "lib": ["esnext"],
    "types": [
			"@cloudflare/workers-types/experimental",
			"@types/node",
		],
		"baseUrl": ".",
		"allowSyntheticDefaultImports": true,
		"paths": {
			"~/*": ["./src/*"],
		}
  },
	"include": ["./src/**/*"]
}
