{
  "compilerOptions": {
		"strict": true,
		"skipLibCheck": true,
    "target": "esnext",
    "module": "esnext",
		"moduleResolution": "bundler",
    "lib": ["esnext"],
    "types": [
			"@cloudflare/workers-types/experimental",
			"@cloudflare/vitest-pool-workers",
			"@types/node",
			"../site/src/types.d.ts"
		],
		"baseUrl": "./",
		"outDir": "./dist",
		"allowSyntheticDefaultImports": true,
		"paths": {
			"~/*": ["./src/*"],
			"~/shared/*": ["../site/src/*"]
		}
  },
	"include": ["./src/**/*", "./tests/**/*", "vitest.config.ts"]
}
